server {
        listen     80;
        server_name aurora.local *.aurora.local;
        access_log /var/log/nginx/aurora.local.log;
        error_log /var/log/nginx/aurora.local-error.log info;
        location / {
                proxy_pass http://127.0.0.1:8080/;
                include /etc/nginx/proxy.conf;
        }
        location /media/ {
                root /web/aurora.local/releases/current/aurora.local;
                expires 30d;
        }

}

